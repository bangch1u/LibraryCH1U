<style>
    .custom-prev, .custom-next {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 50px;
        height: 50px;   
        border-radius: 50%;
        border: 1px solid #ddd;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10;
    }

    .custom-prev {
        left: -60px; /* Đẩy nút Prev ra ngoài bên trái */
    }

    .custom-next {
        right: -60px; /* Đẩy nút Next ra ngoài bên phải */
    }

    .custom-prev:hover, .custom-next:hover {
        background-color: #f0f0f0;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: grey; /* Đổi màu nền của icon */
        /* filter: invert(1) brightness(2) sepia(1) hue-rotate(0deg) saturate(1000%); */
        width: 3rem;
        height: 3rem;
        border-radius: 50%;
        padding: 10px;
    }

</style>